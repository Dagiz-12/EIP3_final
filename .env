# Django Settings
SECRET_KEY=your-secret-key-here-change-this-for-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,eipethiopia.org,www.eipethiopia.org

# Database
DATABASE_URL=sqlite:///db.sqlite3
# For PostgreSQL:
# DATABASE_URL=postgresql://username:password@localhost:5432/eip_db

# Redis Cache
REDIS_URL=redis://localhost:6379/0
# For production with Redis Cloud:
# REDIS_URL=rediss://:password@redis-hostname:port/0

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@eipethiopia.org
ADMIN_EMAIL=admin@eipethiopia.org

# Site URL (for email links)
SITE_URL=http://localhost:8000
# For production:
# SITE_URL=https://eipethiopia.org

# CSRF Trusted Origins (for production)
CSRF_TRUSTED_ORIGINS=https://eipethiopia.org,https://www.eipethiopia.org